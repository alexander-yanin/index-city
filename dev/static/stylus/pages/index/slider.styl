.slider-wrapper
  position relative
  size(100%, 435px)
  background-size cover
  background-repeat no-repeat
  background-position center center
  &.aqua:before
    content '';
    absolute(0, 0, 0, 0)
    background-image: linear-gradient(to right, #33beca, rgba(0, 0, 0, 0.5));
  &.black:before
    content '';
    absolute(0, 0, 0, 0)
    background-color rgba(0, 0, 0, 0.5)

  .slider
    display flex
    flex-direction column

    &-title
      position relative
      width 100%
      max-width 1200px
      height 30px
      font-family SourceSansPro
      font-size rem(28px)
      text-align center
      color #fff
      margin 29px auto 32px

      .slider-link
        position absolute
        right 20px
        size(187px, 45px)
        border-radius 2px
        border solid 1px #ffffff
        font-family SourceSansPro
        font-size 18px
        text-align center
        color #ffffff
        line-height 43px


    &-content
      max-width 1200px
      margin: auto
      overflow hidden

      .slides
        display flex
        flex-direction row
        transform translateX(0%)
        transition transform 1s

      &__slide
        flex-shrink 0
        -webkit-flex-shrink 0
        size(360px, 260px)
        //margin-right 40px
        margin 0 20px
        background-size cover
        background-repeat no-repeat
        background-position center center
        //
        //&:nth-child(3n+1)
        //  margin-left 0

    &-footer-dots
      z-index 10
      display flex
      flex-direction row
      justify-content center
      margin 30px auto

    &-dot
      z-index 11
      size(24px)
      border 2px solid #fff
      border-radius 50%
      margin-left 15px

      &:first-child
        margin-left 0

      &.active
        background-color #fff
