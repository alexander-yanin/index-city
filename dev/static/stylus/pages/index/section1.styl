.houserooms
  size(100%, auto)
  &-header
    display flex
    justify-content space-between
    margin-bottom 20px
    h4
      display flex
      align-items flex-start
      font-family SourceSansPro
      font-size rem(28px)
      text-align left
      color #42484b
    &__button
      display flex
      align-items center
      justify-content center
      width: 260px;
      height: 45px;
      border-radius: 2px;
      border: solid 1px #33beca
      font-family: SourceSansPro;
      font-size: 18px;
      text-align: center;
      color: #33beca;


.exclus-offer
  display block
  margin -45px auto 40px
  width: 521px;
  height: 60px;
  border-radius: 5px;
  box-shadow: 0 6px 20px 0 rgba(0, 0, 0, 0.6);
  background-color: #fdd835;
  border: solid 1px rgba(120, 120, 120, 0.5);
  font-family: SourceSansPro;
  font-size: 24px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 2.3;
  letter-spacing: normal;
  text-align: center;
  color: #323232;
  text-decoration: none

.enroll-banner
  width: 100%;
  height: 265px;
  border-radius: 2px;
  box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.31);
  background-color: #ffffff;
  border: solid 1px rgba(0, 0, 0, 0.05);
  background-repeat: no-repeat
  background-size: contain

  h3
    font-family: SourceSansPro;
    font-size: 36px;
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: left;
    color: #323232;
    margin: 29px 0 0 20px

  p
    font-family: FiraSans;
    font-size: 18px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.5;
    letter-spacing: normal;
    text-align: left;
    color: #323232;
    margin: 15px 0 0 20px

  a
    display block
    width: 246px;
    height: 40px;
    border-radius: 5px;
    background-color: #fdd835;
    margin: 30px 0 0 20px
    font-family: SourceSansPro;
    font-size: 18px;
    font-weight: 600;
    font-style: normal;
    font-stretch: normal;
    line-height: 2.1;
    letter-spacing: normal;
    text-align: center;
    color: #323232;

  &.housing-enroll
    h3 
      font-size 24px
      font-weight: normal
      margin: 10px 0 0 20px

    p
      font-size 16px
      margin: 8px 0 0 20px

    a
      margin 24px 0 0 20px
    
.modal-lids
  display none
  z-index 22
  position: fixed
  background-color: rgba(0, 0, 0, 0.9)
  top 0
  left 0
  width 100%
  height 100%
  text-align: center;

  &__title
    font-family: PTSans;
    font-size: 35px;
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.34;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    margin-top 140px

  &__form
    display flex
    width 340px
    margin 40px auto
    overflow hidden
    border-radius 5px

    input 
      border: none;
      outline none

  &__input
    padding 5px 10px
    width 180px
    height 40px

  &__submit
    width 160px
    height 40px
    background-color: #33beca
    color #fff
    font-family: "SourceSansPro"
    font-weight: 600

  &__close_down
    font-family: PTSans;
    font-size: 20px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.2;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    text-decoration: none
    &:hover
      color #ffffff
      text-decoration: underline